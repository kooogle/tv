<%= content_for(:title, '账户注册 | Koogle') %>
<div class="login">
  <div style="text-align: center;padding-top: 20px">
    <a href="/">
      <img src="<%= image_path('sources/xxoo.png')%>" style="height: 152px">
    </a>
  </div>
  <div class="login__form sign_up">
    <%= form_for(resource, as: resource_name, url: sign_up_path) do |f| %>
      <div class="login__row">
        <svg class="login__icon name svg-icon" viewBox="0 0 20 20">
          <path d="M0,20 a10,8 0 0,1 20,0z M10,0 a4,4 0 0,1 0,8 a4,4 0 0,1 0,-8"></path>
        </svg>
        <input type="text" id="email" name="user[email]" class="login__input name" autofocus="true" placeholder="<%= model_errors(resource,'email') || '登录邮箱' %>">
      </div>
      <div class="login__row">
        <svg class="login__icon pass svg-icon" viewBox="0 0 20 20">
          <path d="M0,20 20,20 20,8 0,8z M10,13 10,16z M4,8 a6,8 0 0,1 12,0"></path>
        </svg>
        <input type="password" id="password" name="user[password]" class="login__input name" autofocus="true" placeholder="<%= model_errors(resource,'password') || '登录密码' %>">
      </div>
      <div class="login__row">
        <svg class="login__icon pass svg-icon" viewBox="0 0 20 20">
          <path d="M0,20 20,20 20,8 0,8z M10,13 10,16z M4,8 a6,8 0 0,1 12,0"></path>
        </svg>
        <input type="password" id="confirmation" name="user[password_confirmation]" class="login__input name" autofocus="true" placeholder="<%= model_errors(resource,'password_confirmation') || '确认密码' %>">
      </div>
      <button id="submit" type="submit" class="login__submit">注册账户</button>
    <% end %>
    <%= render :partial=>'users/shared' %>
  </div>
</div>