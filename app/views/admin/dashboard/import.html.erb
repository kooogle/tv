<%= content_for(:title,  ' 视频导入 | Koogle') %>
<section class="content-header">
  <h1>
    数据导入
    <small>「视频导入」</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-dashboard"></i> 数据中心</a></li>
    <li class="active"><i class="glyphicon glyphicon-send"></i>数据导入</li>
  </ol>
</section>
<section class="content">
  <div class="box box-danger">
    <div class="box-header">
      <h3 class="box-title">视频数据</h3>
    </div>
    <form method="post" action="<%= import_data_path %>" enctype="multipart/form-data">
      <div class="box-body">
        <div class="col-md-5">
          <div class="form-group has-error">
            <div class="input-group">
              <div class="input-group-addon"><i class="fa fa-database"></i></div>
              <%= select(:import,:database, ['User','Video','File'],{prompt:'请选择导入数据库'},{class:'form-control'}) %>
            </div>
          </div>
          <div class="form-group has-error">
            <div class="input-group">
              <div class="input-group-addon"><i class="fa fa-map-signs"></i></div>
              <input class="form-control" type="text" name="column_id" placeholder="视频数据请填写栏目序号">
            </div>
          </div>
          <div class="form-group has-error">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-file"></i>
              </div>
              <input class="form-control" type="file" name="data_file" accept=".csv">
            </div>
          </div>
          <hr>
          <div>
            <button type="submit" class="btn bg-blue btn-flat" style="width: 120px">提交</button>
            <a href="<%= admin_root_path %>" class="btn bg-navy btn-flat" style="width: 120px">取消</a>
          </div>
        </div>
      </div>
    </form>
  </div>
</section>