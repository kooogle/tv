<div class="tab-content">
  <div id="control-sidebar-theme-demo-options-tab" class="tab-pane active">
    <%= render :partial => 'layouts/lte/select_skin' %>
    <h4 class="control-sidebar-heading">布局选项</h4>
    <div class="form-group">
      <label class="control-sidebar-subheading"><input type="checkbox" data-layout="fixed" class="pull-right">内容布局</label>
    </div>
    <div class="form-group">
      <label class="control-sidebar-subheading"><input type="checkbox" data-layout="layout-boxed" class="pull-right">盒子布局</label>
    </div>
    <div class="form-group">
      <label class="control-sidebar-subheading"><input type="checkbox" data-layout="sidebar-collapse" class="pull-right">切换侧栏</label>
    </div>
    <div class="form-group">
      <label class="control-sidebar-subheading"><input type="checkbox" data-enable="expandOnHover" class="pull-right">侧栏在悬停时展开</label>
    </div>
    <div class="form-group">
      <label class="control-sidebar-subheading"><input type="checkbox" data-controlsidebar="control-sidebar-open" class="pull-right">切换右侧边栏</label>
    </div>
    <div class="form-group">
      <label class="control-sidebar-subheading"><input type="checkbox" data-sidebarskin="toggle" class="pull-right">切换右侧背景</label>
    </div>
  </div>
</div>